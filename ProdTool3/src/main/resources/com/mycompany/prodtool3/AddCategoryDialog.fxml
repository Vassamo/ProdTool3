<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.prodtool3.ControllerAddCategoryDialog">
    <Label text="Category Name:"/>
    <TextField fx:id="categoryNameField"/>
    <Button text="Choose Image" fx:id="chooseImageButton" onAction="#handleChooseImage"/>
    <HBox spacing="10">
        <Button text="Add" fx:id="addButton" onAction="#handleAdd"/>
        <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancel"/>
    </HBox>
</VBox>
